#enterPortalContainer, #enterBattlegroundContainer {
	margin-left: auto; 
	margin-right: auto; 
	font-size: 22px; 
	color: grey; 
	align: center; 
	text-align: center; 
	border: 2px solid; 
	border-radius: 25px; 
	width: 300px; 
	cursor: pointer;
}

.readyToEnterPortal, .readyToEnterBattleground {
	background: #007700;
	color: white !important;
}

.readyToEnterPortal:hover, .readyToEnterBattleground:hover {
	background: #00CC00
}

#garrisonTable	{
	margin-left: auto; 
	margin-right: auto;
} 

.garrisonRow {
	cursor: pointer;
}

.garrisonInfoContainer {
	position: relative;
}

.garrisonInfoDiv{
	height: 100%;
	position: relative;
}

.battlegroundOrderContainer {
	border-radius: 25px; 
	border: 2px solid; 
	position: absolute; 
	bottom: 0;
	display: none;
}

.selectedGarrisonRow {
	background-color: #000080;
}

.objectivesMetHR, .captureHR {
	width: 50%;
}

.hiddenChapterHeading {
	display: none;
}

#garrisonCharacterDetails {
	color: #dd61dd;
	height: 100%;
}

#garrisonTableAndCharacterDetails {
	border-color: silver;
	border-style: solid;
    border-width: 5px;
    border-radius: 25px;
	vertical-align: middle;
	width: 99%;
}

#garrisonTableScroll {
	overflow: scroll;
	overflow-x: hidden;
	height: 100%;
}


.garrisonCharacterDescription {
	display: inline-block;
    vertical-align: middle;
	overflow: auto;
	color: #ff8000;
}

#garrisonCharacterMoreDetailsCell {
	vertical-align: top;
	text-align: left;
	color: #ff8000;
}

.garrisonCharacterMoreDetailsName {
	color: yellow;
	font-size: 20px;
}

#garrisonAbilitiesInfoCell {
	vertical-align: top;
	text-align: left;
	color: #ff8000;
	
}

#garrisonCharacterImgCell {
	text-align: left;
}

